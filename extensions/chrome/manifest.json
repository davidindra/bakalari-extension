{
  "manifest_version": 2,
  "name": "Bakaláři - Předvídač",
  "description": "Doplněk pro Bakaláře, který přidává skvělé funkce, jakými je například předvídání známek.",
  "author": "David Indra",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": [
        "http://cmg.prostejov.cz/*",
        "https://cmg.prostejov.cz/*",
        "http://*.cmgpv.cz/*",
        "https://*.cmgpv.cz/*"
      ],
      "js": [
        "onPageLoad.js"
      ]
    }
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
      "default_icon": "icons/icon-48.png"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}